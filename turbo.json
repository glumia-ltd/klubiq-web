{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local", "package-lock.json"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": [
				"$TURBO_DEFAULT$",
				"vite.config.*",
				"tsconfig*.json",
				".env*",
				"src/**",
				"public/**"
			],
			"env": ["NODE_ENV", "VITE_*"],
			"outputs": ["dist/**", ".turbo/"],
			"cache": true
		},
		"test": {
			"cache": true,
			"outputs": ["coverage/", ".turbo/"]
		},
		"lint": {
			"dependsOn": ["^lint"],
			"cache": true,
			"outputs": [".turbo/"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"start": {
			"cache": false,
			"persistent": true
		},
		"reset": {
			"cache": false
		},
		"storybook": {
			"cache": false,
			"persistent": true
		},
		"clean": {
			"cache": false
		}
	}
}
